FROM python:3.12-slim

# Install basic tools + Node + npm + SSH client
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    build-essential \
    curl \
    ca-certificates \
    nodejs \
    npm \
    openssh-client \
    && rm -rf /var/lib/apt/lists/*

# Install Codex CLI and Gemini CLI globally
RUN npm install -g @openai/codex @google/gemini-cli

WORKDIR /app

CMD [ "bash" ]
